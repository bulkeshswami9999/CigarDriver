<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="200dp" android:height="150dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/grey_light"
                android:endColor="@color/grey_light">
            </gradient>
            <corners android:radius="0dp" />
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
            <stroke
                android:dashGap="2dp"
                android:dashWidth="2dp"
                android:width="1dp"
                android:color="@color/grey" />
        </shape>
    </item>
    <item android:gravity="center"
        android:top="0dp"
        android:width="10dp"
        android:height="10dp"
        android:drawable="@drawable/ic_add" />

</layer-list>